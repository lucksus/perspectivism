{
  "name": "perspectivism",
  "version": "0.0.1",
  "license": "CAL-1.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build-languages": "cd src/languages/note-ipfs && npm i && npm run build && cd - && cd src/languages/url-iframe && npm i && npm run build && cd - && cd src/languages/gun-links && npm i && npm run build && cd -",
    "build": "tsc && rollup -c && npm run build-languages",
    "dev": "tsc && rollup -c -w",
    "serve": "sirv public",
    "validate": "svelte-check",
    "electron": "electron .",
    "start": "electron .",
    "lint": "tslint -c tslint.json \"src/main-thread/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/main-thread/*.ts\"",
    "test": "mocha './src/main-thread/*.test.js'"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@smui/data-table": "^1.0.0",
    "@smui/fab": "^1.0.0",
    "@smui/icon-button": "^1.0.0",
    "@smui/textfield": "^1.0.0",
    "@smui/top-app-bar": "^1.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "electron": "^10.1.1",
    "faker": "^5.1.0",
    "mocha": "^8.2.1",
    "node-sass": "^4.14.1",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.26.11",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@smui/button": "^1.0.0",
    "@smui/chips": "^1.0.0",
    "@smui/drawer": "^1.0.0",
    "@smui/form-field": "^1.0.0",
    "@smui/list": "^1.0.0",
    "@smui/select": "^1.0.0",
    "@types/jest": "^26.0.15",
    "@types/mocha": "^8.0.3",
    "apollo-link-electron": "file:../apollo-link-electron",
    "apollo-server": "^2.18.2",
    "electron-graphql": "^0.2.1",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^6.2.4",
    "gun": "^0.2020.520",
    "gun-file": "^1.0.123",
    "ipfs": "^0.50.2",
    "jest": "^26.6.2",
    "multihashing": "^0.3.3",
    "sha3": "^2.1.3",
    "sirv-cli": "^1.0.0",
    "subscriptions-transport-ws": "^0.9.18",
    "svelte-apollo": "^0.4.0",
    "svelte-table": "^0.1.11",
    "ts-jest": "^26.4.3",
    "uuid": "^8.3.1"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      },
      "google": {}
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts",
      "<rootDir>/tests/**/?(*.)test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    }
  }
}
